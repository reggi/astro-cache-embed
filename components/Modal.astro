---
interface Props {
  id: string;
}
const { id } = Astro.props
---
<div data-modal-id={id} class=`mastodon-modal hidden fixed z-50 inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-screen w-screen justify-center items-center`>
  <slot/>
</div>

<style is:global>
  .mastodon-modal img {
    @apply max-h-full max-w-full p-20 mx-auto;
  }
</style>